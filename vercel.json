{
    "version": 2,
    "builds": [
        {
            "src": "src/main.ts",
            "use": "@vercel/node"
        },
        {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "dist" }
        }
    ],
    "routes": [
        {
            "src": "/backend/(.*)",
            "dest": "src/main.ts",
            "methods": [
                "GET",
                "POST",
                "PUT",
                "DELETE"
            ]
        },
        {
            "src": "/static/(.*)",
            "headers": { "cache-control": "s-maxage=31536000, immutable" },
            "dest": "frontend/static/$1"
        },
        { "src": "/(.*)", "dest": "frontend/index.html" }
    ]
}